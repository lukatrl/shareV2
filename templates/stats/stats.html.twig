{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Statistiques des fichiers{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="content-wrapper" style="background-color: #f6f8fa; border: 1px solid var(--custom-green); border-radius: 6px; padding: 2rem;">
            <h1 class="text-center mt-4 pt-4 display-4 fw-bold animate-title" style="color: var(--custom-green);">
                Statistiques des fichiers publi√©s
            </h1>
            <div class="row justify-content-center">
                <div class="col-12 p-4 m-0" style="color: var(--github-dark);">
                    <canvas id="fileChart" class="animate-chart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="{{ asset('Js/stats.js') }}"></script>

    <style>
        /* Animation pour le titre */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Animation pour le graphique */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-title {
            animation: fadeInDown 1s ease-out;
        }

        .animate-chart {
            animation: fadeInUp 1s ease-out 0.3s;
            animation-fill-mode: both;
        }

        .content-wrapper {
            transition: box-shadow 0.3s ease;
        }

        .content-wrapper:hover {
            box-shadow: 0 0 15px rgba(46, 164, 79, 0.3);
        }
    </style>
{% endblock %}