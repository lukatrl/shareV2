{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}}Ajouter un fichier
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="content-wrapper" style="background-color: #f6f8fa; border: 1px solid var(--custom-green); border-radius: 6px; padding: 2rem;">
            <h1 class="text-center mt-4 pt-4 display-4 fw-bold animate-title" style="color: var(--custom-green);">
                Ajouter un fichier
            </h1>
            <div class="row justify-content-center">
                <div class="col-12 p-4 m-0" style="color: var(--github-dark);">
                    {{form(form)}}
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 p-4 m-0" style="color: var(--github-dark);">
                    <div class="table-responsive">
                        <table class="table caption-top animate-table">
                            <caption style="color: var(--github-grey);">Liste des fichiers</caption>
                            <thead style="background-color: var(--github-dark); color: var(--github-grey);">
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Extension</th>
                                    <th scope="col">Taille</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for f in app.user.fichiers | sort((a, b) => a.nomOriginal <=> b.nomOriginal) %}
                                    <tr class="animate-row" style="background-color: {{ cycle(['#ffffff', '#f6f8fa'], loop.index0) }};">
                                        <td>{{f.nomOriginal}}</td>
                                        <td>{{f.dateEnvoi | date("d-m-Y à H:i:s") }}</td>
                                        <td>
                                            {% if f.extension == 'pdf' %}
                                                <i class="bi bi-file-earmark-pdf" style="color: var(--custom-green);"></i>
                                            {% else %}
                                                <i class="bi bi-file-earmark-text" style="color: var(--github-grey);"></i>
                                            {% endif %}
                                        </td>
                                        {% set ko = f.taille / 1000 %}
                                        <td>{{ko}} ko</td>
                                        <td>
                                            <a href="{{path('telechargement-fichier', {'id':f.id})}}" target="_blank">
                                                <i class="bi bi-download animate-icon" style="color: var(--green-hover);"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Animation pour le titre */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Animation pour la table */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Animation pour les lignes au survol */
        @keyframes rowHighlight {
            from {
                background-color: inherit;
            }
            to {
                background-color: rgba(46, 164, 79, 0.1);
            }
        }

        /* Animation pour les icônes/boutons */
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-5px);
            }
            60% {
                transform: translateY(-2px);
            }
        }

        .animate-title {
            animation: fadeInDown 1s ease-out;
        }

        .animate-table {
            animation: fadeInUp 1s ease-out 0.3s;
            animation-fill-mode: both;
        }

        .animate-row {
            transition: background-color 0.3s ease;
        }

        .animate-row:hover {
            animation: rowHighlight 0.3s ease forwards;
        }

        .animate-icon {
            transition: transform 0.3s ease;
        }

        .animate-icon:hover {
            animation: bounce 1s ease infinite;
        }

        .content-wrapper {
            transition: box-shadow 0.3s ease;
        }

        .content-wrapper:hover {
            box-shadow: 0 0 15px rgba(46, 164, 79, 0.3);
        }

        .table th, .table td {
            padding: 1rem;
            vertical-align: middle;
        }

        /* Style pour l'input file (bouton d'upload) */
        input[type="file"] {
            display: none;
        }

        input[type="file"] + label {
            display: inline-flex;
            align-items: center;
            padding: 0.6rem 1.2rem;
            background-color: #f6f8fa;
            color: var(--custom-green);
            border: 1px solid var(--custom-green);
            border-radius: 6px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.2s ease, color 0.2s ease;
        }

        input[type="file"] + label:hover {
            background-color: var(--custom-green);
            color: #ffffff;
        }

        /* Style pour le bouton d'envoi (submit) - Override du bleu */
        input[type="submit"],
        button[type="submit"],
        .btn-primary { /* Si Bootstrap ajoute cette classe */
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.6rem 1.2rem;
            background-color: var(--custom-green) !important; /* Force le vert */
            color: #ffffff !important; /* Force le texte blanc */
            border: 1px solid var(--custom-green) !important; /* Force la bordure */
            border-radius: 6px;
            font-weight: 500;
            text-align: center;
            cursor: pointer;
            transition: background-color 0.2s ease, color 0.2s ease;
        }

        input[type="submit"]:hover,
        button[type="submit"]:hover,
        .btn-primary:hover {
            background-color: var(--green-hover) !important; /* Vert clair au survol */
            color: #ffffff !important;
            border-color: var(--green-hover) !important;
        }

        /* Désactiver les styles Bootstrap par défaut qui pourraient causer le bleu */
        .btn-primary {
            --bs-btn-bg: none; /* Supprime le fond Bootstrap */
            --bs-btn-border-color: none; /* Supprime la bordure Bootstrap */
            --bs-btn-hover-bg: none; /* Supprime le survol Bootstrap */
            --bs-btn-hover-border-color: none;
        }

        /* Espacement dans le formulaire */
        .form-group {
            margin-bottom: 1.5rem;
        }
    </style>
{% endblock %}